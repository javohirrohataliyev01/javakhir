
<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kitob Qidirish</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background: #f9f9f9;
        }
        #searchBox {
            margin: 20px;
            padding: 10px;
            width: 250px;
        }
        #btnSearch {
            padding: 10px 20px;
            cursor: pointer;
        }
        .book {
            border: 1px solid #ccc;
            background: white;
            padding: 10px;
            margin: 10px auto;
            width: 300px;
            text-align: left;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <h1>Kitob Qidirish</h1>
    <input type="text" id="searchBox" placeholder="Kitob nomini yozing...">
    <button id="btnSearch">Qidirish</button>
    <div id="results"></div>

    <script>
        document.getElementById('btnSearch').addEventListener('click', function() {
            let query = document.getElementById('searchBox').value;
            if (!query) {
                alert('Iltimos, kitob nomini yozing!');
                return;
            }

            fetch(`https://openlibrary.org/search.json?q=${query}`)
                .then(response => response.json())
                .then(data => {
                    let resultsDiv = document.getElementById('results');
                    resultsDiv.innerHTML = '';
                    if (data.docs.length === 0) {
                        resultsDiv.innerHTML = '<p>Hech narsa topilmadi.</p>';
                        return;
                    }
                    data.docs.slice(0, 1).forEach(book => {
                        let div = document.createElement('div');
                        div.classList.add('book');
                        div.innerHTML = `
                            <h3>${book.title}</h3>
                            <p><b>Muallif:</b> ${book.author_name ? book.author_name.join(', ') : 'Nomaâ€™lum'}</p>
                            <p><b>Yil:</b> ${book.first_publish_year || 'Nomaâ€™lum'}</p>
                        `;
                        resultsDiv.appendChild(div);
                    });
                })
                .catch(err => console.error(err));
        });
    </script>
</body>
</html>
